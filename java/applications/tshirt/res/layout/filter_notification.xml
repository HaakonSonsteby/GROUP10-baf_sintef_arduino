<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fn_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
    <TableLayout
            android:id="@+id/fn_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/fn_labelOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:text="Current Filter:"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/fn_labelCurrentOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="currentFilter"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/fn_labelCurrentSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Current Selection: Notification"/>

        <TextView
                android:id="@+id/fn_labelCurrentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Options"
                android:textStyle="bold"/>
        <Button
                android:text="Get Sender of Notification"
                android:id="@+id/fn_buttonGetSender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>

        <View android:layout_height="2dip"/>

        <Button
                android:text="Get Message"
                android:id="@+id/fn_buttonGetMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>
        <View android:layout_height="2dip"/>

        <Button
                android:text="Get Link"
                android:id="@+id/fn_buttonGetLink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>


    </TableLayout>
</ScrollView>