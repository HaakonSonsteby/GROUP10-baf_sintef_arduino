<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fp_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
    <TableLayout
            android:id="@+id/fp_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


        <TextView
                android:text="Current Filter:"
                android:id="@+id/fp_labelOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:textStyle="bold"/>
        <TextView
                android:text="currentFilter"
                android:id="@+id/fp_labelCurrentOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/fp_labelCurrentSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Current Selection: Person"/>

        <TextView
                android:id="@+id/fp_labelCurrentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Options"
                android:textStyle="bold"/>
        <Button
                android:text="Get Name of Person"
                android:id="@+id/fp_buttonGetName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>

        <View android:layout_height="2dip"/>
        <Button
                android:id="@+id/fp_buttonGetID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get ID of Person"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>


    </TableLayout>
</ScrollView>