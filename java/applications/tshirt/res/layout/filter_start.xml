<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fs_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
    <TableLayout
            android:id="@+id/fs_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


        <TextView
                android:text="Select how filter will begin"
                android:id="@+id/fs_labelFilterStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:textStyle="bold"/>
        <View android:layout_height="2dip"/>
        <Button
                android:text="Get Latest Message"
                android:id="@+id/fs_buttonGetLatestMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>

        <View android:layout_height="2dip"/>
        <Button
                android:text="Get Latest Notification"
                android:id="@+id/fs_buttonGetLatesNotification"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>
        <View android:layout_height="2dip"/>
        <Button
                android:text="Get Logged in User"
                android:id="@+id/fs_buttonGetLoggedInUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>


    </TableLayout>
</ScrollView>