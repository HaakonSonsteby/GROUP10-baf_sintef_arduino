<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/os_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
    <TableLayout
            android:id="@+id/rl_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
                android:id="@+id/rl_labelRulesList"
                android:background="@color/dark_gray"
                android:padding="5dp"
                android:text="Rules List"
                android:textSize="16sp"/>
        <ListView
                android:id="@android:id/list"
                android:padding="5dp"/>

        <TextView
                android:id="@android:id/empty"
                android:padding="5dp"
                android:text="No rules yet"/>
        <Button
                android:id="@+id/rl_buttonAddRule"
                android:layout_marginBottom="5dp"
                android:text="Add Rule"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>
        <TextView
        android:id="@+id/rl_labelInstruction"
        android:padding="5dp"
        android:text="If all filters in a rule is true, a message will be sent to the arduino according to the output settings."/>
        <Button
                android:id="@+id/rl_buttonClearDB"
                android:layout_marginBottom="5dp"
                android:text="Remove all rules"
                android:typeface="sans"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>
    </TableLayout>
</ScrollView>